<body id="app">
    <div class="main-container">

        <div class="settings">
            <div id="settings-btn" class="theme-green">
                <i class="fas fa-cog"></i>
            </div>
            <div id="settings-panel" class="theme-green">
                <!-- volume -->
                <div class="settings-item" id="volume-slider">
                    <div class="label">
                        Volume: <span id="volume-value"></span>
                    </div>
                    <div class="slider">
                        <input id="volumeSlider" class="theme-green" type="range" min="0" max="100" value="0.5">
                    </div>
                </div>

                <hr/>

                <!-- Song options -->
                <div class="settings-item" id="song-options-container">
                    <div class="label">Song Options:</div>
                    <form>
                        <input placeholder="Enter Youtube URL" type="text" id="import-link-input" class="theme-green text-input" name="youtube-link" />
                        <button id="upload-yt-link-btn" class="btn theme-green">Import</button>
                        <button id="mysongs-btn" class="btn theme-green">My Songs</button>
                    </form>
                </div>

                <hr />

                <!-- color themes -->
                <div class="settings-item" id="color-themes">
                    <div class="label">Theme Options: </div>
                    <div id="theme-selector-container">
                        {{#each themes}}
                        <div 
                            class="theme-selector-item" 
                            style="background-color: rgb({{rgb_primary}});)"
                            color-name = {{color_name}}
                            primary = {{rgb_primary}}
                            foreground = {{rgb_foreground}}
                            background = {{rgb_background}}
                            >
                        </div>
                        {{/each}}
                    </div>
                    <select id="display-style-selector" class="theme-green">
                        <option value="rect">Bars</option>
                        <option value="point-waveform">Dots-Waveform</option>
                        <option value="point-spectrum">Dots-Spectrum</option>
                        <option value="line">Line</option>
                    </select>
                </div>

            </div>
        </div>


        <div id="waveform"></div>
        <div id="player">
            <div id="song-info">
                <div id="song-name" class="theme-green"></div>
                <div id="artist-name" class="theme-green"></div>
            </div>
            <div class="player-controls">
                <div id="previous-track" class="theme-green skip-track">
                    <i class="skip-icon fas fa-backward"></i>
                </div>
                <div id="play-btn" class="theme-green">
                    <i id="play-icon" class="fas fa-play fa-lg"></i>
                </div>
                <div id="next-track" class="theme-green skip-track">
                    <i class="skip-icon fas fa-forward"></i>
                </div>
            </div>
        </div>

    </div>
</body>
